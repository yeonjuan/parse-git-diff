{
  "exclude": [
    "src/__tests__",
    "src/__fixtures__",
    "build",
    "node_modules",
    "demo"
  ],
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "module": "CommonJS",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "es2022"
  }
}
